<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx"
      fx:controller="com.example.messengerclient.controller.LoginFxController"
      stylesheets="@../css/style.css">

    <VBox fx:id="main">
        <VBox styleClass="fields">
            <VBox.margin>
                <Insets left="50.0" right="50.0"/>
            </VBox.margin>
            <TextField styleClass="loginTextField" fx:id="loginField" promptText="Enter Your Login"/>
            <PasswordField styleClass="loginTextField" fx:id="passwordField" promptText="Enter Your Password"/>
        </VBox>
        <VBox styleClass="loginButtonVBox" fx:id="loginButtonVBox">
            <VBox.margin>
                <Insets left="50" right="50" top="5"/>
            </VBox.margin>
            <Button fx:id="loginButton" onAction="#login" text="Login"/>
            <Label fx:id="label1" visible="false" textFill="red"/>
        </VBox>
    </VBox>
</VBox>